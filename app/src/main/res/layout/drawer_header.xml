<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/drawer_header_height"
  android:layout_gravity="start"
  android:paddingStart="@dimen/drawer_header_padding_left"
  android:paddingEnd="@dimen/drawer_header_padding_left"
  android:paddingLeft="@dimen/drawer_header_padding_left"
  android:paddingRight="@dimen/drawer_header_padding_left"
  android:background="@color/colorPrimary"
  android:orientation="vertical"
  >

  <ImageView
    android:id="@+id/profileImageView"
    android:layout_width="@dimen/drawer_header_image_size"
    android:layout_height="@dimen/drawer_header_image_size"
    android:layout_marginTop="@dimen/drawer_header_image_margin_top"
    android:layout_gravity="start|top"
    android:src="@drawable/ic_empty_profile"/>

  <TextView
    android:id="@+id/nameTxt"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/drawer_header_text_margin_top"
    android:textColor="@android:color/white"
    android:textSize="@dimen/drawer_header_text_size"
    tools:text="User Name"/>

</LinearLayout>