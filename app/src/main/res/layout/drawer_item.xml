<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mainView"
  android:layout_width="match_parent"
  android:layout_height="@dimen/drawer_header_image_size"
  android:paddingStart="@dimen/drawer_header_text_margin_top"
  android:paddingEnd="@dimen/drawer_header_text_margin_top"
  android:paddingLeft="@dimen/drawer_header_text_margin_top"
  android:paddingRight="@dimen/drawer_header_text_margin_top"
  android:background="@drawable/item_click_selector"
  android:gravity="center|start"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/itemIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_empty_calender_small"/>

  <TextView
    android:id="@+id/itemNameTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_ten_dp"
    android:layout_marginLeft="@dimen/dimen_ten_dp"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/drawer_header_text_size"
    tools:text="Menu Item"/>

</LinearLayout>