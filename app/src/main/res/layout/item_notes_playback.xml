<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_two_dp"
    android:background="@color/colorCardBackground"
    app:cardElevation="@dimen/dimen_four_dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/playback_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.nloops.ntasks.views.AudioCounterView
            android:id="@+id/playback_txt_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_eight_dp"
            android:layout_marginRight="@dimen/dimen_eight_dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/play_back_btn"
            tool:text="0:00" />

        <ImageButton
            android:id="@+id/play_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_sixteen_dp"
            android:background="@drawable/touch_selector"
            android:contentDescription="@string/content_playback_btn"
            android:src="@drawable/ic_red_mic"
            app:layout_constraintLeft_toRightOf="@id/playback_seek_bar"
            app:layout_constraintRight_toLeftOf="@id/playback_seek_bar"
            app:layout_constraintTop_toBottomOf="@id/playback_seek_bar" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
