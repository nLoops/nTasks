<?xml version="1.0" encoding="utf-8"?>

<com.nloops.ntasks.views.SwipeRevealLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/item_swipe_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  app:dragFromEdge="right">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingStart="@dimen/dimen_twenty_dp"
      android:paddingEnd="@dimen/dimen_twenty_dp"
      android:gravity="center_vertical|end"
      android:orientation="horizontal">

      <ImageButton
        android:id="@+id/item_delete_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_delete"
        android:text="@string/str_action_detail_delete"
        android:tint="@color/colorPrimaryDark"/>

    </LinearLayout>
  </FrameLayout>

  <FrameLayout
    android:id="@+id/frame_holder_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dimen_four_dp"
      android:elevation="@dimen/dimen_four_dp"
      android:foreground="?android:selectableItemBackground"
      android:stateListAnimator="@animator/card_lift_on_touch"
      android:visibility="visible">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_eight_dp"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <CheckBox
            android:id="@+id/tasks_list_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <com.nloops.ntasks.views.TaskTitleView
            android:id="@+id/tasks_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingEnd="@dimen/dimen_four_dp"
            android:paddingRight="@dimen/dimen_four_dp"
            android:textSize="@dimen/title_text_size"
            tools:text="Get Some Milk"/>

          <View
            android:id="@+id/task_priority_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:layout_marginEnd="@dimen/dimen_four_dp"
            android:layout_marginRight="@dimen/dimen_four_dp"
            android:background="@color/colorPrimaryLight"/>
        </LinearLayout>

        <TextView
          android:id="@+id/task_list_due_date"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/dimen_four_dp"
          android:layout_marginRight="@dimen/dimen_four_dp"
          android:layout_gravity="end"
          android:fontFamily="sans-serif-condensed"
          tools:text="25-05"/>

      </LinearLayout>

    </android.support.v7.widget.CardView>
  </FrameLayout>

</com.nloops.ntasks.views.SwipeRevealLayout>