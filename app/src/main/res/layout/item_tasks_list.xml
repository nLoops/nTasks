<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/colorCardBackground"
    android:elevation="@dimen/dimen_four_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_eight_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tasks_list_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tasks_list_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingEnd="@dimen/dimen_four_dp"
                android:paddingRight="@dimen/dimen_four_dp"
                android:textStyle="bold"
                tools:text="Get Some Milk" />

            <View
                android:id="@+id/task_priority_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_four_dp"
                android:layout_marginRight="@dimen/dimen_four_dp"
                android:layout_weight="0.05"
                android:background="@color/colorPrimaryLight" />
        </LinearLayout>

        <TextView
            android:id="@+id/task_list_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen_four_dp"
            android:layout_marginRight="@dimen/dimen_four_dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            tools:text="25-05" />

    </LinearLayout>

</android.support.v7.widget.CardView>